# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{h,c}]
indent_style = space
indent_size = 2

[*.proto]
indent_style = space
indent_size = 2

[*.options]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[makefile]
indent_style = tab

